---
import { siteConfig } from 'src/config/site-config';
import MainLayout from 'src/layouts/MainLayout.astro';
import BlogPost from 'src/components/BlogPost.astro';

// deprecated Astro.glob
// const posts = await Astro.glob('src/pages/posts-old/*.{md,mdx}');
const matches = import.meta.glob('src/pages/posts-old/*.{md,mdx}', { eager: true });
const posts = Object.values(matches);
---

<MainLayout title="Blog App">
    <!-- component -->
    <section class="bg-gray-900">
        <div class="container px-6 py-10 mx-auto">
            <h1
                class="text-3xl font-semibold text-white capitalize lg:text-4xl"
            >
                {siteConfig.title}
            </h1>

            <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
                {posts.map((post) => <BlogPost {...post} />)}
            </div>
        </div>
    </section>
</MainLayout>
